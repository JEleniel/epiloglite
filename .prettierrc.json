{
	"$schema": "https://json.schemastore.org/prettierrc",
	"arrowParens": "always",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"endOfLine": "lf",
	"experimentalTernaries": true,
	"htmlWhitespaceSensitivity": "css",
	"overrides": [
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": ["*.md", "*.markdown", "[instructions]"],
			"options": {
				"parser": "markdown",
				"emphasis": "_",
				"strong": "*",
				"tabWidth": 4,
				"useTabs": false,
				"markdownListMarker": "-",
				"markdownPipeLeadingAndTrailing": true,
				"codeFences": "backtick",
				"proseWrap": "always",
				"embeddedLanguageFormatting": "off"
			}
		}
	],
	"printWidth": 120,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"semi": true,
	"singleAttributePerLine": false,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true
}
